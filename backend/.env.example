# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hsea_assistant

# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# Zoom API
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Firebase Cloud Messaging
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Email (SMTP) - for sending emails and file attachments
# Gmail: use App Password, not your normal password
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# File store (optional; defaults to backend/uploads)
# UPLOAD_FOLDER=/path/to/uploads
# MAX_UPLOAD_MB=16

# API Configuration
# Using port 5001 to avoid conflict with AirPlay Receiver on macOS
PORT=5001
API_BASE_URL=http://localhost:5001
